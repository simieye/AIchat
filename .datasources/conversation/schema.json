
{
  "name": "conversation",
  "title": "对话记录",
  "schemas": [
    {
      "name": "lead_id",
      "title": "潜客ID",
      "type": "String"
    },
    {
      "name": "platform",
      "title": "对话平台",
      "type": "String"
    },
    {
      "name": "status",
      "title": "对话状态",
      "type": "String"
    },
    {
      "name": "messages",
      "title": "消息列表",
      "type": "Array",
      "items": {
        "type": "Object"
      }
    },
    {
      "name": "contact",
      "title": "联系人信息",
      "type": "Object"
    },
    {
      "name": "last_message",
      "title": "最后消息",
      "type": "String"
    },
    {
      "name": "last_interaction_at",
      "title": "最后交互时间",
      "type": "DateTime",
      "format": "timestamp-ms"
    },
    {
      "name": "unread_count",
      "title": "未读消息数",
      "type": "Number"
    },
    {
      "name": "assigned_to",
      "title": "分配给",
      "type": "String"
    },
    {
      "name": "priority",
      "title": "优先级",
      "type": "String"
    },
    {
      "name": "tags",
      "title": "标签",
      "type": "Array",
      "items": {
        "type": "String"
      }
    },
    {
      "name": "metadata",
      "title": "元数据",
      "type": "Object"
    }
  ]
}
  